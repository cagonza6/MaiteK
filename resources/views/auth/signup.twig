{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-6 col-md-offset3">
			<div class="panel panel-default">
				<div class="panel-heading">{{"Register" | trans}}</div>
				<div class="panel-body">

					<form action="{{ path_for('auth.signup')}}" method="post" autocomplete="off">
						<div class="form-group {{ errors.username ? 'has-error' : '' }}">
							<label for="username">{{"Username" | trans}}</label>
							<input type="text" name="username" id="username" class = "form-control" value="{{ old.username }}">
							{% if errors.username %}
							<span class= "help-block">{{ errors.username | first | trans}}</span>
							{% endif %}
						</div>

						<div class="form-group {{ errors.email ? 'has-error' : '' }}">
							<label for="email">{{"Email" | trans}}</label>
							<input type="email" name="email" id="email" placeholder="{{"you@domain.com"| trans }}" class = "form-control" value="{{ old.email }}">
							{% if errors.email %}
							<span class= "help-block">{{ errors.email | first | trans}}</span>
							{% endif %}
						</div>

						<div class="form-group {{ errors.email_confirm ? 'has-error' : '' }}">
							<label for="email_confirm">{{"Confirm email" | trans}}</label>
							<input type="email" name="email_confirm" id="email_confirm" class = "form-control" value="{{ old.email_confirm }}">
							{% if errors.email_confirm %}
							<span class= "help-block">{{ errors.email_confirm | first | trans}}</span>
							{% endif %}
						</div>

						<div class="form-group {{ errors.password ? 'has-error' : '' }}">
							<label for="password">{{"Password" | trans}}</label>
							<input type="password" name="password" id="password" class = "form-control">
							{% if errors.password %}
							<span class= "help-block">{{ errors.password | first | trans}}</span>
							{% endif %}
						</div>

						<div class="form-group {{ errors.password_confirm ? 'has-error' : '' }}">
							<label for="password_confirm">{{"Confirm password" | trans}}</label>
							<input type="password" name="password_confirm" id="password_confirm" class = "form-control">
							{% if errors.password_confirm %}
							<span class= "help-block">{{ errors.password_confirm | first | trans}}</span>
							{% endif %}
						</div>

						<div class="form-group {{ errors.captcha ? 'has-error' : '' }}">
							<label for="captcha">{{"Security Code" | trans}}</label>
							<img src="{{ captcha.inline }}" />
							<input type="text" name="captcha" id="captcha" class = "form-control">
							{% if errors.captcha %}
							<span class= "help-block">{{ errors.captcha | first | trans}}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-default">{{"Register" | trans}}</button>
						{{ csrf.field | raw}}
					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
