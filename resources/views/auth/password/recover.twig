{% extends 'templates/app.twig' %}

{% block content %}

						<!--p>Enter the email address of your account in order to send you the recovery email </p -->
	<div class="row">
		<div class="col-md-6 col-md-offset3">
			<div class="panel panel-default">
				<div class="panel-heading">Password Recovery</div>
				<div class="panel-body">

					<form action="{{ path_for('password.recover')}}" method="post" autocomplete="off">
						<div class="form-group {{ errors.email ? 'has-error' : '' }}">
							<label for="email">Email</label>
							<input type="email" name="email" id="email" class = "form-control" value="{{ old.email }}">
							{% if errors.email %}
								<span class= "help-block">{{ errors.email | first}}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-default">Send recovery email</button>

						{{ csrf.field | raw}}

					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
