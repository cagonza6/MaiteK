{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-6 col-md-offset3">
			<div class="panel panel-default">
				<div class="panel-heading">Change Email</div>
				<div class="panel-body">

					<form action="{{ path_for('email.change')}}" method="post" autocomplete="off">

						<div class="form-group {{ errors.password ? 'has-error' : '' }}">
							<label for="password">Password</label>
							<input type="password" name="password" id="password" class = "form-control">
							{% if errors.password %}
								<span class= "help-block">{{ errors.password | first}}</span>
							{% endif %}
						</div>
						<div class="form-group {{ errors.email ? 'has-error' : '' }}">
							<label for="email">New email</label>
							<input type="email" name="email" id="email" class = "form-control">
							{% if errors.email %}
								<span class= "help-block">{{ errors.email | first}}</span>
							{% endif %}
						</div>
						<div class="form-group {{ errors.email_confirm ? 'has-error' : '' }}">
							<label for="email_confirm">Confirm email</label>
							<input type="email" name="email_confirm" id="email_confirm" class = "form-control">
							{% if errors.email_confirm %}
								<span class= "help-block">{{ errors.email_confirm | first}}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-default">Change email</button>

						{{ csrf.field | raw}}

					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
