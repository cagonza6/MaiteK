{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-6 col-md-offset3">
			<div class="panel panel-default">
				<div class="panel-heading">{{"Log in" | trans}}</div>
				<div class="panel-body">

					<form action="{{ path_for('auth.signin')}}" method="post" autocomplete="off">
						<div class="form-group {{ errors.username ? 'has-error' : '' }}">
							<label for="username">{{"Username" | trans}}</label>
							<input type="test" name="username" id="username" class = "form-control" value="{{ old.username }}">
							{% if errors.username %}
							<span class= "help-block">{{ errors.username | first}}</span>
							{% endif %}
						</div>

						<div class="form-group {{ errors.password ? 'has-error' : '' }}">
							<label for="password">{{"Password" | trans}}</label>
							<input type="password" name="password" id="password" class = "form-control">
							{% if errors.password %}
							<span class= "help-block">{{ errors.password | first}}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-default">Sign in</button>
						<div class="text-center">
							<a href="{{ path_for('password.recover')}}">{{"Forgot password?" | trans}}</a>
						</div>
						{{ csrf.field | raw}}

					</form>

				</div>
			</div>
		</div>
	</div>

{% endblock %}
